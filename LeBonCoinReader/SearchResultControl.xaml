<UserControl x:Class="LeBonCoinReader.SearchResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200"
             MinHeight="50"
             MaxWidth="200">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="{DynamicResource NoImage}"/>
        <Grid HorizontalAlignment="Left" Height="50" Margin="50,0,0,0" VerticalAlignment="Top" Width="150" Grid.Row="3" Grid.RowSpan="1">
            <Label x:Name="title" Content="Post Title" FontWeight="Bold" FontSize="12" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top"/>
            <Label x:Name="category" Content="Post Category" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top"/>
            <Label x:Name="price" Content="€" HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" Margin="0,0,2,0"/>

        </Grid>
    </Grid>
</UserControl>
